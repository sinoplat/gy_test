<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/titlebar" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/home_bg" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_tvandet"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/maintain_employeeNo_tv"
                        style="@style/common_textview"
                        android:text="员工工号:" />

                    <EditText
                        android:id="@+id/maintain_employeeNo"
                        style="@style/common_edittext" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/maintain_manage_employeePhoneNo_tv"
                        style="@style/common_textview"
                        android:text="员工电话1:" />

                    <EditText
                        android:id="@+id/maintain_manage_employeePhoneNo"
                        style="@style/common_edittext" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/maintain_adjuster_ll"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/maintain_adjuster_employeeCode_tv"
                        style="@style/common_textview"
                        android:text="员工电话2:" />

                    <EditText
                        android:id="@+id/maintain_adjuster_employeeCode"
                        style="@style/common_edittext" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/maintain_adjuster_employeePhoneNo_tv"
                        style="@style/common_textview"
                        android:text="员工电话3:" />

                    <EditText
                        android:id="@+id/maintain_adjuster_employeePhoneNo"
                        style="@style/common_edittext" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/maintain_employeePhoneNo_new_tv"
                        style="@style/common_textview"
                        android:text="员工电话4:" />

                    <EditText
                        android:id="@+id/maintain_employeePhoneNo_new"
                        style="@style/common_edittext" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/maintain_verificationNo_ll"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView style="@style/verificationNo_tv" />

                    <EditText
                        android:id="@+id/maintain_verificationNo"
                        style="@style/verificationNo_et"
                        android:gravity="center_horizontal" />

                    <com.sinosoft.mobileshop.appwidget.TimeButton
                        android:id="@+id/maintain_getVerificationNo"
                        style="@style/verificationNo_btn" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/maintain_adjustPhoneNo"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/common_btn_green"
                    android:padding="5dp"
                    android:text="调整手机号"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/maintain_addPhoneNo"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/common_btn_green"
                    android:padding="5dp"
                    android:text="增加手机号"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>